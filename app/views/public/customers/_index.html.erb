  <table class='table'>
  <thead>
    <tr>
      <tr class="table-dark">
      <th>名前</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td class="font-weight-bold"><%= image_tag customer.get_profile_image, size: '50x50' , :class => "rounded-circle" %><div class="m-3  d-inline-block"><%= customer.user_name %></td></div>
        <td><%= render "public/relationships/btn", customer: customer %></td>
        <td><%= link_to 'ユーザーページ', customer, class: "customer_#{customer.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
