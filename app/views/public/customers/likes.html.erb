 <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'info', customer: current_customer %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>いいねした記事</h2>
      <% @like_list.each do |article| %>
      <% if @like_list.present? %>
          <div class="card mb-2">
               <h4 class="card-header"><%= link_to article.title,article, class: "article_#{article.id}" %></h4>
               <div class="card-body">
               <h6 class="card-subtitle mb-2 text-muted"><%= article.customer.user_name %></h6>
               <h6 class="card-subtitle mb-2 text-muted"><%= article.created_at.strftime('%Y/%m/%d') %></h6>
               <p class="card-text"><%= simple_format(article.body) %></p>
            　 <div class="d-flex">
                <div class="like-<%= article.id %>">
                 <%= render "public/likes/btn", article: article %>
                </div>
                <div>
                 <%= render "public/comments/counter", article: article %>
                </div>
               </div>
              </div>
              </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>



