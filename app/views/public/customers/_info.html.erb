<table class='table'>
  <tr><%= image_tag customer.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= customer.user_name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= customer.introduction %></th>
  </tr>
 
</table>

<div class='row'>
  <% if current_customer!= customer %>
    <td><%= render "public/relationships/btn", customer: customer %></td>
  <% else %>
    <%= link_to edit_customer_path(customer), class: "btn btn-outline-secondary btn-block edit_customer_#{customer.id}" do %>
    <i class="fas fa-customer-cog"></i>
    <% end %>
  <% end %>
</div>