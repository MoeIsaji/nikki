<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>ユーザー情報</h2>
    <%= form_with model:@customer, local:true do |f| %>
      <%= render 'layouts/errors', obj: @customer %>
      <div class="form-group">
        <label for="user_name">名前</label><br>
        <%= f.text_field :user_name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <label for="image">プロフィール写真</label><br>
        <%= f.file_field :profile_image, class: "form-control-file customer_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
           <label for="introduction">ひとこと</label><br>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit'更新する', class: 'btn btn-secondary' %>
        <%= link_to '退会する', @customer, method: :delete, data: { confirm: '本当に退会しますか？過去の投稿も見ることができなくなります' }, class: "btn btn-danger destroy_customer_#{@customer.id}" %></td>
      </div>
    <% end %>
  </div>
</div>