<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>動物園の名前</th>
      <th>記事</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to(article.customer) do %>
          <%= image_tag article.customer.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to article.title,article, class: "article_#{article.id}" %></td>
        <td><%= article.body %></td>
        <td class=<%= "like-" + article.id.to_s %> >
            <%= render "public/likes/btn", article: article %>
        </td>
        <td><%= render "public/comments/counter", article: article %></td>
      </tr>
    <% end %>
  </tbody>
</table>