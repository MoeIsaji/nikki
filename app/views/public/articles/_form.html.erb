<%= form_with model:article,local:true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control article_title' %>
  </div>
  <div class="form-group">
    <%= f.label :記事 %>
    <%= f.text_area :body, class: 'form-control article_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
